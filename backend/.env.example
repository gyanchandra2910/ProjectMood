# Environment Variables for ProjectMood Backend
PORT=3001
NODE_ENV=development

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Socket.IO Settings
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# Firebase Admin SDK Configuration
# Option 1: Use service account key JSON (recommended for development)
# Download from Firebase Console > Project Settings > Service Accounts
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}

# Option 2: Individual Firebase config (alternative)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"

# Database Configuration
# MongoDB connection string (local or cloud)
MONGODB_URI=mongodb://localhost:27017/projectmood
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/projectmood

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Audio/Voice Processing
# Optional: OpenAI API key for Whisper speech-to-text
# OPENAI_API_KEY=your-openai-api-key-here

# Optional: Google Cloud Speech-to-Text API
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# File Upload Limits
MAX_AUDIO_FILE_SIZE=10485760
MAX_IMAGE_FILE_SIZE=5242880

# Privacy Settings
STORE_AUDIO_BY_DEFAULT=false
STORE_IMAGES_BY_DEFAULT=false

# Feature Flags
ENABLE_VOICE_MOOD=true
ENABLE_FACE_MOOD=true
ENABLE_PRIVACY_LOGGING=true
