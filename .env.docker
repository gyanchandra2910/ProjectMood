# Docker Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
NODE_ENV=development

# Database Configuration
MONGO_PASSWORD=moodfusion_mongo_2024
REDIS_PASSWORD=moodfusion_redis_2024
MONGO_EXPRESS_PASSWORD=admin123

# Backend Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
CORS_ORIGIN=http://localhost:3000
SOCKETIO_CORS_ORIGIN=http://localhost:3000

# Firebase Configuration (Backend)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project"}

# Firebase Configuration (Frontend)
REACT_APP_API_URL=http://localhost:3001
REACT_APP_SOCKET_URL=http://localhost:3001
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-firebase-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef

# Spotify API (Optional)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Docker Hub Configuration (for CI/CD)
DOCKER_USERNAME=your-dockerhub-username
DOCKER_PASSWORD=your-dockerhub-password

# Production URLs (for deployment)
PRODUCTION_API_URL=https://your-api-domain.com
PRODUCTION_FRONTEND_URL=https://your-frontend-domain.com
